<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.sjsu.cs151.RestaurantController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="detailsLabel">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <HBox>
        <Label text="Name: "/>
        <Label fx:id="restaurantName"/>
    </HBox>

    <HBox>
        <Label text="Cuisine: "/>
        <Label fx:id="cuisine"/>
    </HBox>
    <HBox>
        <Label text="Cost: "/>
        <Label fx:id="cost"/>
    </HBox>
    <HBox>
        <Label text="Address: "/>
        <Label fx:id="address"/>
    </HBox>
    <HBox>
        <Label text="URL: "/>
        <Label fx:id="url"/>
    </HBox>

<!--    <ListView fx:id="detailsListView" onMouseClicked="#handleListViewClick"/>-->

    <HBox spacing="10">
        <Button text="Back" onAction="#onBackButtonClick"/>
    </HBox>



</VBox>
